RIOT_API_KEY=replace_me

# PLATFORM = server shard for LEAGUE/SUMMONER calls
#   NA1, EUW1, EUN1, KR, BR1, LA1, LA2, OC1, TR1, RU, JP1
PLATFORM=NA1

# REGION = cluster for MATCH calls
#   AMERICAS, EUROPE, ASIA
REGION=AMERICAS

# TIER: CHALLENGER|GRANDMASTER|MASTER|DIAMOND|EMERALD|PLATINUM|GOLD|SILVER|BRONZE|IRON
TIER=MASTER
# DIVISION only used for non-master tiers (I|II|III|IV)
DIVISION=I

# How deep to scrape
LADDER_PAGES=5          # pages for entry endpoint (non-master tiers). Ignored for Master+
SEED_SUMMONERS=1000     # how many summoners to sample per run (de-duped)
MATCHES_PER=20          # 1..20 per puuid
MIN_PICKS=50            # minimum occurrences to keep a comp in the table
